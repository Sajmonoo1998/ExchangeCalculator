<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="400dp"
        android:layout_height="323dp"
        android:background="@color/EERIE_BLACK"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/butt1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="1"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/butt4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="4"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/butt7"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="7"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buttDot"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="."
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/butt2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="2"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/butt5"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="5"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/butt8"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="8"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/butt0"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/butt3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="3"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/butto6"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="6"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/butt9"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:text="9"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/butt00"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:text="00"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttDel"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:text="Del"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="Del" />

            <Button
                android:id="@+id/buttRefresh"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:focusableInTouchMode="false"
                android:foreground="@drawable/ic_autorenew_white_24dp"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buttClear"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="161dp"
                android:focusableInTouchMode="false"

                android:text="C"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/LinearLayout11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/thirdFlag"
                android:layout_width="76dp"
                android:layout_height="78dp"
                android:visibility="visible"
                app:srcCompat="@drawable/poland_48px" />

            <TextView
                android:id="@+id/thirdCurrencyMark"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:gravity="center"
                android:text="PLN"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/thirdUnfold"
                android:layout_width="49dp"
                android:layout_height="78dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/ic_expand_more_red_300_24dp"
                tools:layout_editor_absoluteX="242dp"
                tools:layout_editor_absoluteY="182dp" />

            <EditText
                android:id="@+id/thirdCurrencyInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/secondFlag"
            android:layout_width="76dp"
            android:layout_height="78dp"
            android:visibility="visible"
            app:srcCompat="@drawable/flag_of_europe_48px" />

        <TextView
            android:id="@+id/secondCurrencyMark"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:gravity="center"
            android:text="EUR"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/secondUnfold"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/ic_expand_more_red_300_24dp" />

        <EditText
            android:id="@+id/secondCurrencyInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:cursorVisible="false"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/firstFlag"
            android:layout_width="76dp"
            android:layout_height="78dp"
            android:visibility="visible"
            app:srcCompat="@drawable/denmark_48px" />

        <TextView
            android:id="@+id/firstCurrencyMark"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:gravity="center"
            android:text="DKK"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/firstUnfold"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/ic_expand_more_red_300_24dp" />

        <EditText
            android:id="@+id/firstCurrencyInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:cursorVisible="false"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/currencyRelation"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>